#landing-page
  background: url('pattern.gif');
  min-height: 100%;

#landing-page-content
  background-color: #1f282d;
  box-sizing: border-box;
  color: white;
  max-width: 900px;
  margin: 0 auto;
  padding: 4.5em 7em;
  // position: relative;
  top: 4em;

  & .logo
    margin-bottom: 3em;
    text-align: center;

  & p
    margin-bottom: .75em;
    margin-top: .75em;

  & ul li
    display: inline-block;


#for-geeks.closed
  display: none;
  opacity: 0;
  transition: opacity 0.3s;

#for-geeks:not(.closed)
  display: block;
  opacity: 1;
  transition: opacity 0.3s;

#for-geeks-button
  color: #e66047;
  cursor: pointer;

  & svg
    vertical-align: middle;

#new-chat-button
  background-color: #2eb497;
  border: none;
  color: white;
  cursor: pointer;
  display: block;
  font-size: 1em;
  margin: 4em auto 0;
  padding: .75em 2em;
  transition: background-color 350ms;
  &:hover
    background-color: #0F9E7F;