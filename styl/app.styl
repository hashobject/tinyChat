#message-input
#messages
  position: relative;
  z-index: 2;

.page.hidden 
  display: none;

#messages
  text-align: left;
  width: 420px;

  & li
    background: rgba(0,0,0,0.6);
    border-left-width: 0.5em;
    border-left-style: solid;
    color: white;
    margin-bottom: 1px;
    padding: .75em 1.5em .75em 1em;
    text-shadow: 1px 1px 1px rgba(0,0,0,0.5);
    &.mine
      border-left-color: #2eb497;
    &.not-mine
      border-left-color: #e66047;

    &#message-input
      padding: 0;

      & input
        padding: .75em 1.5em .75em 1em;
        background-color: transparent;
        border: none;
        box-sizing: border-box;
        color: #bebebe;
        font-size: 1em;
        width: 100%;
        &:focus
          outline: none;

    & p
      margin: 0;