@import 'nib'

html
body
  width: 100%;
  height: 100%;
  margin: 0;
  text-align: center;
  font-family: "Helvetica Neue",Helvetica,'PT Sans',Arial,sans-serif;
  font-size: 16px;
  line-height: 1.5;

#local-video video
  min-width: 100%;
  max-height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  -webkit-filter: blur(4px) grayscale(100%) brightness(130%) contrast(100%);
  filter: blur(4px) grayscale(100%) brightness(130%) contrast(100%);


#remote-video
  display: none;


#message-input
#messages
  position: relative;
  z-index: 2;

.page.hidden 
  display: none;

#messages
  text-align: left;
  width: 420px;

  & li
    border-left-width: 0.5em 
    border-left-style: solid;
    margin-bottom: 1px;
    padding: .75em 1.5em .75em 1em
    & p
      margin: 0; 